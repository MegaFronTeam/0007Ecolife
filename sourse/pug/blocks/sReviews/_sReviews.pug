mixin rate()
	+e.rate-wrap
		+e.rate-item
		+e.rate-item
		+e.rate-item
		+e.rate-item
		+e.rate-item

mixin grid-item(num)
	.grid-item
		+rate()
		a(href=`img/sReviews-img-${num}.jpg` data-fancybox=`sReviews-img-${num}`)
			img(src=`img/sReviews-img-${num}.jpg`, alt="sReviews-img")

mixin sReviews(data)
	// start sReviews
	+b.SECTION.sReviews.section#sReviews&attributes(attributes)
		.container.text-center
			+b.section-title.text-center
				h2 #[strong Отзывы] о компании «ЭкоЛайф»
			.grid
				-for(i=1; i<=8; i++)
					+grid-item(i)
			a(href="#").main-btn Смотреть все отзывы
	// end sReviews