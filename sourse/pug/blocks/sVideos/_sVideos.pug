mixin video-item(link, vidNum, preview, i, desc, num, ...items)
	+e.col-wrap.col-lg-3.col-sm-6
		+e.slide(href=`${link}` data-fancybox=`video-${vidNum}-${i}`)
			+e.video-wrap
				+img(`img/vid-prev-${preview}.jpg`, 'bg')
			+e.icon-wrap
				+icon('play-fill')
		+e.desc!= desc
		+e.num!= num
		+e.hashtag-wrap
			each item in items 
				+e.hashtag-item(href="#")!= item
