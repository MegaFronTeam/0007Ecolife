extends ../layout/main.pug


include ../blocks/sContent/_sContent.pug
include ../blocks/sContact/_sContact.pug
include ../blocks/sForm/_sForm.pug

block variables
	- let  mainPage= null 
	- let  bg= null

block title
	- let  title= 'Модальные окна'
	title= title
block pagecontent
	//- +topLine()
	
	.section.container
		h1 Страница для  демонстрации модальных окон
		.row
			mixin btn(id, name)
				.col-auto.mb-2
					a.btn.btn-primary(href=`#` data-src=id data-fancybox="modal")&attributes(attributes)= name
			+btn("leave-the-phone", "leave-the-phone")(
				data-title='Оставьте <strong>телефон</strong>'
				data-text="и наш менеджер подберет для вас оптимальные условия сервисного договора" 
				data-btn="подобрать условия договора	" data-img="img/modal-img-1.png")
			+btn("leave-the-phone-2", "leave-the-phone-2")
			+btn("leave-the-phone-3", "leave-the-phone-3")
			+btn("leave-the-phone-4", "leave-the-phone-4")
			+btn("leave-the-phone-5", "leave-the-phone-5")
			+btn("leave-the-phone-6", "leave-the-phone-6")
			+btn("leave-the-phone-7", "leave-the-phone-7")
			+btn("leave-the-phone-8", "leave-the-phone-8")
			+btn("done", "done")

